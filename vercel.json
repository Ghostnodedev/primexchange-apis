{
  "version": 2,
  "builds": [{ "src": "src/handler.js", "use": "@vercel/node" }],
  "routes": [
    { "src": "/login", "dest": "/src/handler.js" },
    { "src": "/register", "dest": "/src/handler.js" },
    { "src": "/getcrypto", "dest": "/src/handler.js" },
    { "src": "/test", "dest": "/src/handler.js" }
  ],
  "headers": [
    {
      "source": "/(login|register|getcrypto|test)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
